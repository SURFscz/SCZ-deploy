version: "2"

services:

  {{ sbs_db_host }}:
    image: mysql:8.0
    volumes:
      - ./etc/init.sql:/docker-entrypoint-initdb.d/init.sql
      - ./etc/mysql.cnf:/etc/mysql/conf.d/mysql.cnf
      - ./data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: "{{ sbs_db_password }}"
      MYSQL_DATABASE: "{{ sbs_db_name }}"
      MYSQL_USER: "{{ sbs_db_user }}"
      MYSQL_PASSWORD: "{{ sbs_db_password }}"
    networks:
      - sbs-backend
    restart: unless-stopped

  db_front:
    image: adminer
    links:
      - {{ sbs_db_host }}
    ports:
      - 8080:8080
    networks:
      - sbs-backend
      - sbs-frontend
    restart: unless-stopped

  server:
    image: "{{ sbs_image_repository }}/{{ sbs_server_image }}:{{ sbs_server_version }}"
    volumes:
      - ./log:/opt/app/log
      - ./etc/config.yml:/tmp/config.yml
      - ./etc/alembic.ini:/tmp/alembic.ini
    depends_on:
      - {{ sbs_db_host }}
    networks:
      - sbs-backend
    environment:
      PROFILE: local
    command:
      - /bin/bash
      - -c
      - |
        cp /tmp/config.yml server/config/config.yml
        cp /tmp/config.yml server/config/test_config.yml
        cp /tmp/alembic.ini server/migrations/alembic.ini
        echo "Waiting for Database..."
        sleep 20
        python -m server
    restart: unless-stopped

  client-prod:
    image: "{{ sbs_image_repository }}/{{ sbs_client_image }}:{{ sbs_client_version }}"
    volumes:
      - ./etc/nginx.conf:/etc/nginx/nginx.conf
    ports:
      - {{ sbs_client_port }}:80
    networks:
      - sbs-backend
      - sbs-frontend
    links:
      - server
    restart: unless-stopped

networks:
  sbs-backend:
    driver: bridge
  sbs-frontend:
    driver: bridge
