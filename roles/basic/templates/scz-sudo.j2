# Allow members of groups {{sudo_groups|join(',')}} to execute any command
{% for group in sudo_groups %}
%{{group}}	ALL=(ALL:ALL) ALL
{% endfor %}

# Allow members of groups {{sudo_groups_nopasswd|join(',')}} to execute any command without entering passwd
{% for group in sudo_groups_nopasswd %}
%{{group}}	ALL=(ALL:ALL) NOPASSWD: ALL
{% endfor %}

# root may always sudo without password
root	ALL=(ALL:ALL) NOPASSWD: ALL

# set some sane defaults
Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"
Defaults	!tty_tickets

