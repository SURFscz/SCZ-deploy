---
module: satosa.frontends.saml2.SAMLFrontend
name: SamlIdP
config:
  idp_config:
    key_file: certs/frontend.key
    cert_file: certs/frontend.crt
    organization:
      display_name: "{{ satosa_md.organisation.display_name }}"
      name: "{{ satosa_md.organisation.name }}"
      url: "{{ satosa_md.organisation.url }}"
    contact_person:
      - contact_type: technical
        email_address: {{ satosa_md.contacts.technical.email_address }}
        given_name: {{ satosa_md.contacts.technical.given_name }}
      - contact_type: support
        email_address: {{ satosa_md.contacts.support.email_address }}
        given_name: {{ satosa_md.contacts.support.given_name }}
      - contact_type: administrative
        email_address: {{ satosa_md.contacts.administrative.email_address }}
        given_name: {{ satosa_md.contacts.administrative.given_name }}
    metadata:
      local: ['metadata/sp-test.xml']
      mdq: ['http://localhost:{{ pyff_port }}']
    entityid: <base_url>/md/<name>.xml
    service:
      idp:
        name: Proxy IdP
        ui_info:
          display_name:
            - lang: en
              text: "{{ satosa_mdui.idp.display_name.en }}"
          description:
            - lang: en
              text: "{{ satosa_mdui.idp.description.en }}"
          information_url:
            - lang: en
              text: "{{ satosa_mdui.idp.information_url.en }}"
          privacy_statement_url:
            - lang: en
              text: "{{ satosa_mdui.idp.privacy_statement_url.en }}"
          keywords:
            - lang: nl
              text: {{ satosa_mdui.idp.keywords.nl | to_json }}
            - lang: en
              text: {{ satosa_mdui.idp.keywords.en | to_json }}
          logo:
            text: "{{ satosa_mdui.idp.logo.url }}"
            width: "{{ satosa_mdui.idp.logo.width }}"
            height: "{{ satosa_mdui.idp.logo.height }}"
        endpoints:
          single_sign_on_service: []
        name_id_format: ['urn:oasis:names:tc:SAML:2.0:nameid-format:persistent', 'urn:oasis:names:tc:SAML:2.0:nameid-format:transient']
        policy:
          default:
            attribute_restrictions: null
            fail_on_missing_requested: false
            lifetime: {minutes: 15}
            #name_form: urn:oasis:names:tc:SAML:2.0:attrname-format:basic
    attribute_map_dir: '{{ satosa_env_dir }}/mapper'
    allow_unknown_attributes: true
  acr_mapping:
    "": default-LoA
    "https://accounts.google.com": LoA1
  endpoints:
    single_sign_on_service: {'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST': sso/post,
      'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect': sso/redirect}
