module: satosa.frontends.saml2.SAMLFrontend
name: Saml2IDP
config:
  idp_config:
    organization: {display_name: Satosa IdP, name: Satosa IdP Org., url: 'http://www.example.com'}
    contact_person:
    - {contact_type: technical, email_address: technical@example.com, given_name: Technical}
    - {contact_type: support, email_address: support@example.com, given_name: Support}
    key_file: certs/frontend.key
    cert_file: certs/frontend.crt
    metadata:
      #local: [metadata/sp.xml]
      mdq: ['https://{{ hostnames.proxy }}']

    entityid: <base_url>/<name>/proxy.xml
    service:
      idp:
        endpoints:
          single_sign_on_service: []
        name: Proxy IdP
        name_id_format: ['urn:oasis:names:tc:SAML:2.0:nameid-format:persistent', 'urn:oasis:names:tc:SAML:2.0:nameid-format:transient']
        policy:
          default:
            attribute_restrictions: null
            fail_on_missing_requested: false
            lifetime: {minutes: 15}
            #name_form: urn:oasis:names:tc:SAML:2.0:attrname-format:basic
    #allow_unknown_attributes: true
  acr_mapping:
    "": default-LoA
    "https://accounts.google.com": LoA1
  endpoints:
    single_sign_on_service: {'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST': sso/post,
      'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect': sso/redirect}
  metadata: <base_url>/<name>/metadata

