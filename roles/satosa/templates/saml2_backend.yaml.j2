---
module: satosa.backends.saml2.SAMLBackend
name: SamlSP
config:
  sp_config:
    key_file: certs/backend.key
    cert_file: certs/backend.crt
    organization:
      display_name: "{{ satosa_md.organisation.display_name }}"
      name: "{{ satosa_md.organisation.name }}"
      url: "{{ satosa_md.organisation.url }}"
    contact_person:
      - contact_type: technical
        email_address: {{ satosa_md.contacts.technical.email_address }}
        given_name: {{ satosa_md.contacts.technical.given_name }}
      - contact_type: support
        email_address: {{ satosa_md.contacts.support.email_address }}
        given_name: {{ satosa_md.contacts.support.given_name }}
      - contact_type: administrative
        email_address: {{ satosa_md.contacts.administrative.email_address }}
        given_name: {{ satosa_md.contacts.administrative.given_name }}
    metadata:
      local: ['metadata/idp-test.xml']
      mdq: ['http://localhost:{{ pyff_port }}']
    entityid: <base_url>/<name>/proxy.xml
    service:
      sp:
        name: Proxy SP
        ui_info:
          display_name:
            - lang: en
              text: "{{ satosa_mdui.sp.display_name.en }}"
          description:
            - lang: en
              text: "{{ satosa_mdui.sp.description.en }}"
          information_url:
            - lang: en
              text: "{{ satosa_mdui.sp.information_url.en }}"
          privacy_statement_url:
            - lang: en
              text: "{{ satosa_mdui.sp.privacy_statement_url.en }}"
          keywords:
            - lang: nl
              text: {{ satosa_mdui.sp.keywords.nl | to_json }}
            - lang: en
              text: {{ satosa_mdui.sp.keywords.en | to_json }}
          logo:
            text: "{{ satosa_mdui.sp.logo.url }}"
            width: "{{ satosa_mdui.sp.logo.width }}"
            height: "{{ satosa_mdui.sp.logo.height }}"
        allow_unsolicited: true
        endpoints:
          assertion_consumer_service:
            - [<base_url>/<name>/acs/post, 'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST']
            - [<base_url>/<name>/acs/redirect, 'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect']
          discovery_response:
            - [<base_url>/<name>/disco, 'urn:oasis:names:tc:SAML:profiles:SSO:idp-discovery-protocol']
        name_id_format: 'urn:oasis:names:tc:SAML:2.0:nameid-format:persistent'
        want_response_signed: false
    attribute_map_dir: '{{ satosa_env_dir }}/mapper'
    allow_unknown_attributes: true
  # disco_srv must be defined if there is more than one IdP in the metadata specified above
  disco_srv: {{http_proto}}://{{ hostnames.mdq }}/role/idp.ds
