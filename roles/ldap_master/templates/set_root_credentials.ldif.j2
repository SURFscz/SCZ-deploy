# {0}config is the services ldap config
dn: olcDatabase={0}config,cn=config
changetype: modify
replace: olcAccess
olcAccess: to *
  by dn.exact=gidNumber=0+uidNumber=0,cn=peercred,cn=external,cn=auth manage
olcAccess: to *
  by dn.exact="{{ master_ldap.binddn }}" manage
  by * break

# {1}mdb is the main COmanage database
dn: olcDatabase={1}mdb,cn=config
changetype: modify
replace: olcSuffix
olcSuffix: {{ master_ldap.basedn }}
-
replace: olcRootDN
olcRootDN: {{ master_ldap.binddn }}
-
replace: olcRootPW
olcRootPW: {{ '%s' | format(master_ldap_password) |  slapd_hash }}
-
# allow the  local root user to access services ldap via the SASL EXTERNAL method
replace: olcAccess
olcAccess: to attrs=userPassword
  by self write by anonymous auth
  by * none
olcAccess: to attrs=shadowLastChange
  by self write
  by * read
olcAccess: to *
  by dn.exact=gidNumber=0+uidNumber=0,cn=peercred,cn=external,cn=auth manage
  by * break
olcAccess: to dn.regex="(.+,)?({{ master_ldap.basedn }})$"
  by dn.exact="{{ master_ldap.binddn }}" write
  by dn.exact,expand="cn=admin,$2" read
  by * break
